{
  "$id": "https://app.runx.dev/schemas/gcp-service-account",
  "type": "object",
  "description": "Creates a GCP service account",
  "properties": {
    "allowed_k8s_services": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "service_account_name": {
            "type": "string",
            "description": "The name of the service account"
          },
          "namespace": {
            "type": "string",
            "description": "The namespace of the service"
          }
        },
        "required": ["service_account_name", "namespace"]
      },
      "description": "List of allowed k8s services"
    }
  }
}
