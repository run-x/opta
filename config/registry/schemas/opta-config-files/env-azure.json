{
  "type": "object",
  "description": "The Opta configuration for an Azure environment",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the environment"
    },
    "org_name": {
      "$ref": "https://app.runx.dev/common-types/org-name"
    },
    "providers": {
      "type": "object",
      "properties": {
        "google": {
          "type": "object",
          "properties": {
            "region": {
              "type": "string",
              "description": "The GCP region to use"
            },
            "project": {
              "type": "string",
              "description": "The name of the GCP project"
            }
          },
          "required": [
            "region",
            "project"
          ]
        }
      },
      "required": [
        "google"
      ]
    },
    "modules": {
      "type": "array",
      "description": "The Opta modules to run in this environment",
      "items": {
        "oneOf": [
          "https://app.runx.dev/modules/azure-aks",
          "https://app.runx.dev/modules/azure-base",
          "https://app.runx.dev/modules/azure-k8s-base",
          "https://app.runx.dev/modules/datadog",
          "https://app.runx.dev/modules/external-ssl-cert",
          "https://app.runx.dev/modules/runx"
        ]
      }
    }
  },
  "required": [
    "name",
    "org_name",
    "providers",
    "modules"
  ]
}