{
  "type": "object",
  "description": "The Opta configuration for an GCP environment",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the environment"
    },
    "org_name": {
      "$ref": "https://app.runx.dev/common-types/org-name"
    },
    "modules": {
      "type": "array",
      "description": "The Opta modules to run in this environment",
      "items": {
        "oneOf": [
          "https://app.runx.dev/modules/datadog",
          "https://app.runx.dev/modules/external-ssl-cert",
          "https://app.runx.dev/modules/gcp-base",
          "https://app.runx.dev/modules/gcp-dns",
          "https://app.runx.dev/modules/gcp-gke",
          "https://app.runx.dev/modules/gcp-k8s-base",
          "https://app.runx.dev/modules/gcp-nodepool",
          "https://app.runx.dev/modules/runx"
        ]
      }
    }
  }
}