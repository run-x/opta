{
  "$id": "https://app.runx.dev/modules/atlas-mongo",
  "description": "Creates an Atlas Mongo database instance",
  "type": "object",
  "properties": {
    "region": {
      "type": "string",
      "description": "MongoDB Atlas Cluster Region, must be a mongo region for the provider.",
      "default": "None"
    },
    "mongo_instance_size": {
      "type": "string",
      "description": "Atlas Mongo Cluster size, see this: https://docs.atlas.mongodb.com/cluster-tier/",
      "default": "M0"
    },
    "mongodbversion": {
      "type": "string",
      "description": "The version of the database to use.",
      "default": "4.4"
    },
    "database_name": {
      "type": "string",
      "description": "The name of the mongo database",
      "default": "mongo_database"
    },
    "public_nat_ips": {
      "type": "array",
      "items": {
        "$ref": "/common-types/ip-address"
      }
    },
    "cloud_provider": {
      "enum": ["AWS", "AZURE", "GCP"],
      "default": "AWS"
    },
    "mongo_atlas_project_id": {
      "type": "string",
      "description": "The Atlas project ID",
      "default": "Notknown"
    }
  },
  "required": ["region", "mongo_instance_size", "mongo_atlas_project_id"],
  "opta_metadata": {
    "module_type": "service",
    "clouds": ["aws", "azure", "gcp"]
  }
}
