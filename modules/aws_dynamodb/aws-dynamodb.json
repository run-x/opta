{
  "$id": "https://app.runx.dev/modules/aws-dynamodb",
  "description": "Creates a DynamoDB table",
  "type": "object",
  "properties": {
    "read_capacity": {
      "description": "This is the read capacaity for your dynamodb table",
      "type": "integer",
      "minimum": 0,
      "default": 20,
      "required": false
    },
    "write_capacity": {
      "description": "This is the write capacaity for your dynamodb table",
      "type": "integer",
      "minimum": 0,
      "default": 20,
      "required": false
    },
    "billing_mode": {
      "description": "The billing mode for you dynamodb table",
      "type": "string",
      "enum": [
        "PROVISIONED",
        "PAY_PER_REQUEST"
      ],
      "default": "PROVISIONED",
      "required": false
    },
    "hash_key": {
      "description": "The hash key for your table",
      "type": "string",
      "default": "",
      "required": true
    },
    "range_key": {
      "description": "The range key for your table",
      "type": "string",
      "default": null,
      "required": false
    },
    "attributes": {
      "description": "The list of attributes (name and type) for this dynamodb table",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "description": "The name of the attribute",
            "type": "string"
          },
          "type": {
            "description": "The type of the attribute",
            "enum": [
              "B",
              "BOOL",
              "N",
              "S",
              "SS"
            ]
          }
        },
        "required": [
          "name",
          "type"
        ]
      },
      "default": "None",
      "required": true
    },
    "type": {
      "description": "The name of this module",
      "enum": [
        "aws-dynamodb"
      ],
      "type": "string"
    }
  },
  "opta_metadata": {
    "module_type": "service",
    "clouds": [
      "aws"
    ],
    "name": "aws-dynamodb"
  },
  "required": [
    "hash_key",
    "attributes",
    "type"
  ]
}