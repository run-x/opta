{
  "$id": "https://app.runx.dev/modules/custom-terraform",
  "description": "To bring in your own custom terraform module",
  "type": "object",
  "properties": {
    "path_to_module": {
      "type": "string",
      "description": "The path to your terraform module",
      "default": null
    },
    "terraform_inputs": {
      "type": "object",
      "description": "The variables which you wish to pass into your custom module.",
      "default": {}
    },
    "type": {
      "description": "The name of this module",
      "enum": [
        "custom-terraform"
      ]
    }
  },
  "opta_metadata": {
    "module_type": "env",
    "clouds": [
      "aws",
      "gcp"
    ]
  },
  "required": [
    "path_to_module",
    "type"
  ]
}