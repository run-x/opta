{
  "$id": "https://app.runx.dev/modules/gcp-dns",
  "type": "object",
  "description": "Adds dns to your environment",
  "properties": {
    "domain": {
      "type": "string",
      "description": "The domain you want (you will also get the subdomains for your use)",
      "default": null,
      "required": true
    },
    "delegated": {
      "type": "boolean",
      "description": "The  Set to true once the extra [dns setup is complete](/tutorials/ingress) and it will add the ssl certs.",
      "default": false,
      "required": false
    },
    "subdomains": {
      "type": "array",
      "description": "A list of subdomains to also get ssl certs for.",
      "items": {
        "type": "string"
      },
      "default": [],
      "required": false
    },
    "type": {
      "description": "The name of this module",
      "enum": [
        "gcp-dns",
        "dns"
      ]
    }
  },
  "required": [
    "domain",
    "type"
  ],
  "opta_metadata": {
    "module_type": "env",
    "clouds": [
      "gcp"
    ],
    "name": "gcp-dns"
  }
}